<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_hb"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5">

        <ImageView
            android:id="@+id/icon_hk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_hk_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hk_hbh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hk_chang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_hk_jx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text=""
                android:textColor="@color/colorT3"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/tv_start_adress"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time_start"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/dp_5"
                android:gravity="right"
                android:text=""
                android:textColor="@color/colorT9"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_start_time_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_start_adress"
                android:layout_gravity="end"
                android:text=""
                android:textColor="@color/colorT3"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@mipmap/plane_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorT3"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/tv_nextday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/tv_time_end"
                    android:background="@drawable/hb_yuan"
                    android:paddingLeft="@dimen/dp_3"
                    android:paddingTop="@dimen/dp_1"
                    android:paddingRight="@dimen/dp_3"
                    android:paddingBottom="@dimen/dp_1"
                    android:text="+1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_9"
                    android:visibility="gone" />
            </RelativeLayout>


            <TextView

                android:id="@+id/tv_end_adress"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_time_end"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_5"
                android:text=""
                android:textColor="@color/colorT9"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_end_time_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_end_adress"
                android:text=""
                android:textColor="@color/colorT3"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="目的地酒店"
            android:textColor="@color/topview_bg"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="目的地景点"
            android:textColor="@color/topview_bg"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="再次预定"
            android:textColor="@color/topview_bg"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:text="接机"
            android:textColor="@color/topview_bg"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>